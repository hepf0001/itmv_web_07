<style>
  header {
    display: flex;
    justify-content: center;
    padding: 20px 0;
  }

  header img {
    width: 20%;
  }
  .space {
    height: 50px;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  main {
    padding: 0 20px 0 35px;
  }
  @media (min-width: 800px) {
    main {
      padding: 0;
      max-width: 650px;
      margin: auto;
    }
    .space {
      height: 90px;
    }
  }
</style>
